@model IEnumerable<InAndOutMain.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-controller="Expense" asp-action="Create">Add New Expense</a>
        </div>
    </div>
    <br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Expense Type
                    </th>
                    <th>
                        Borrow Date
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
               {
                   <tr>
                       <td width="20%">@expense.ExpenseName</td>
                       <td width="20%">@expense.Amount</td>
                       <td width="20%">@expense.ExpenseType.ExpenseTypeNameet</td>
                       <td width="20%">@expense.ExpenseDate</td>
                       <td width="30%">
                           <div class="w-100 btn-group" role="group">
                               <a class="btn btn-primary mx-1" asp-action="Update" asp-route-Id="@expense.Id">Update</a>
                               <a class="btn btn-danger mx-1" asp-action="Delete" asp-route-Id="@expense.Id">Delete</a>
                           </div>

                       </td>
                   </tr>
               }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items Created Yet</p>
    }
</div>