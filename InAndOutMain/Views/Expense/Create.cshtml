@model InAndOutMain.Models.ViewModels.ExpenseVM


<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Expense.ExpenseName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Expense.Amount"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Expense.ExpenseDate"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Expense.ExpenseType"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input class="form-control" asp-for="Expense.ExpenseName"/>
                        <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input class="form-control" asp-for="Expense.Amount"/>
                        <span asp-validation-for="Expense.Amount" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <select class="form-control" asp-for="Expense.ExpenseTypeId" asp-items=@Model.TypeDropDown>
                            <option selected>---Select Expense Type---</option>
                        </select>
                        <span asp-validation-for="Expense.ExpenseTypeId" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input class="form-control" asp-for="Expense.ExpenseDate"/>
                        <span asp-validation-for="Expense.ExpenseDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <a class="btn btn-info w-75" asp-action="Index">Back</a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-success w-75" value="Create"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
}