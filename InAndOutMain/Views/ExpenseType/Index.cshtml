@model IEnumerable<InAndOutMain.Models.ExpenseType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-controller="ExpenseType" asp-action="Create">Add New Expense Type</a>
        </div>
    </div>
    <br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense Type Name
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
               {
                   <tr>
                       <td width="50%">@expense.ExpenseTypeName</td>
                       <td width="50%">
                           <div class="w-75 btn-group" role="group">
                               <a class="btn btn-primary mx-1" asp-action="Update" asp-route-Id="@expense.Id">Update</a>
                               <a class="btn btn-danger mx-1" asp-action="Delete" asp-route-Id="@expense.Id">Delete</a>
                           </div>
                       </td>
                   </tr>
               }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items Created Yet</p>
    }
</div>