@model InAndOutMain.Models.ExpenseType

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense Type</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ExpenseTypeName"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 ">
                        <input class="form-control" asp-for="ExpenseTypeName"/>
                        <span asp-validation-for="ExpenseTypeName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <a class="btn btn-info w-75" asp-action="Index">Back</a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-success w-75" value="Create"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
}