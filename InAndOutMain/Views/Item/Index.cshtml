@model IEnumerable<InAndOutMain.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-controller="Item" asp-action="Create">Create New Item</a>
        </div>
    </div>
    <br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-border table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                    <th>
                        Borrow Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
               {
                   <tr>
                       <td width="25%">@item.ItemName</td>
                       <td width="25%">@item.Borrower</td>
                       <td width="25%">@item.Lender</td>
                       <td width="25%">@item.BorrowedDate</td>
                   </tr>
               }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items Created Yet</p>
    }
</div>